#include <iostream>
using namespace std;
int main()
{
	setlocale(LC_ALL, "ru");
	int m,n,k,sum=0,p=1;
	cout << "Введите кол-во строк в массиве: ";
	cin >> m;
	cout << "Введите кол-во столбцов в массиве: ";
	cin >> n;
	cout << "Введите k (1<=k<=m): ";
	cin >> k;
	int** a = new int*[m];
	for (int i = 0; i < m; i++) {
		a[i] = new int[n];
	}
	for (int i = 0, l = 0; i < m; i++) {
		for (int j = 0; j < n; j++) {
			//cin >> a[i][j];
			l++;
			a[i][j] = l;
		}
	}
	for (int i = 0; i < m; i++) {
		for (int j = 0; j < n; j++) {
			if (i == k - 1) {
				sum += a[i][j];
				p *= a[i][j];
			}
			cout << a[i][j] << "\t";
		}
		cout << endl;
	}
	cout << "сумма " << k << " строки: "<<sum<<"\t" << "произведение " << k << " строки: " <<p<< endl;
	for (int i = 0; i < m; i++) {
		delete [] a[i];
	}
	delete[] a;
}
