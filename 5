#include <iostream>
using namespace std;
int main()
{
	setlocale(LC_ALL, "ru");
	int m, n, x = 0;
	bool check = false;
	float sum = 0;
	cout << "Введите кол-во строк в массиве: ";
	cin >> m;
	cout << "Введите кол-во столбцов в массиве: ";
	cin >> n;
	int** a = new int* [m];
	for (int i = 0; i < m; i++) {
		a[i] = new int[n];
	}
	srand(0);
	for (int i = 0, l = 0; i < m; i++) {
		for (int j = 0; j < n; j++) {
			//cin >> a[i][j];
			l+=rand()%10;
			a[i][j] = l;
		}
	}
	for (int i = 0; i < m; i++) {
		for (int j = 0; j < n; j++) {
			cout << a[i][j] << "\t";
		}
		cout << endl;
	}
	for (int i = 0; i < n; i++) {
		for (int j = 0; j < m; j++) {
			if (a[j][i] % 2 != 0) {
				x++;
			}
		}
		if (x == m && !check) {
			cout << i+1 << endl;
			check = true;
		}
		x = 0;
	}
	if (!check) {
		cout << "0" << endl;
	}
	for (int i = 0; i < m; i++) {
		delete[] a[i];
	}
	delete[] a;
}
